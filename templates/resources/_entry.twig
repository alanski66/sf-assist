{% extends "_layouts/site" %}

{% block content %}


    <section class="news gray-light pt-lg-5 pb-lg-3 pt-sm-4 pb-sm-2 ">
        <div class="container">
            <div class="row ">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <h1 class="page-heading">{{ entry.title }} </h1>

                </div>

            </div>
        </div>

    </section>


    {# {% include '_includes/subscribe-section-top.twig' %} #}

    <!-- tmpl resources  Content -->
    <section class="page generic mt-5">
        <div class="container">


            {% set lazyImage = false %}
            {% set blockPrefix = "" %}
            <div class="row ">
                <div class="col-xs-12 col-md-12 col-lg-7 col-xl-7">

                    {% switch entry.type %}
                        {% case 'resourceVideo' %}
                            {%  set url = entry.mediaUrl %}
                            {%  set options = [] %}

                            {{ entry.mediaUrl.render }}

                        {% case 'resourceDocument' %}
                        <div class=" text-cen ter w-50 hhh" >




                            {% set pdfImage = entry.pdfThumbnailImage[0] ?? null %}

                            {% if pdfImage %}
                                {#{% set transformedImages = craft.imager.transformImage(image,#}
                                {#[#}
                                {#{ width: 350, height: 321, jpegQuality: 75 },#}
                                {#],#}
                                {#{#}
                                {#format: 'jpg',#}
                                {#allowUpscale: false,#}
                                {#mode: 'crop',#}
                                {#jpegQuality: 80,#}
                                {#position: image.getFocalPoint(),#}
                                {#interlace: true#}
                                {#}#}
                                {#) %}#}
                                <a class="card-icon w-25" >

                                    {%  if pdfImage |length %}
                                        <a href="{{ entry.pdfDocument.one().url }}">
                                        <img class="card-img-top mb-3 img-fluid mx-auto" src="{{ pdfImage.getUrl('pdfTransform') }}"
                                             width="{{ pdfImage.getWidth('pdfTransform') }}" height="{{ pdfImage.getHeight('pdfTransform') }}"
                                             alt="{{ pdfImage.title ? pdfImage.title : entry.title }} {{ pdfImage.imageCredit ? pdfImage.imageCredit: ''  }}">
                                            </a>
                                    {%  endif %}

                                </div>
                            {% endif %}

                            <div class="card-body  p-0 mb-5">
                                <h5 class="card-title pt-2 mb-0">
                                    <a href="{{ entry.url }}">{{  entry.title }}</a>
                                </h5>
                                {{ entry.introText }}
                                <a href="{{ entry.pdfDocument.one().url }}" class="btn btn-blue">Download</a>

                            </div>
                        </div>
                    {% endswitch %}


                </div>
                <div class="col-xs-12 col-md-12 col-lg-4 offset-lg-1 col-xl-4 offset-xl-1">
                    {% include ('_includes/sidebar_nav.twig') %}
                </div>
            </div>

        </div>
    </section>

    <section class="blue gray regional-stories bg-gray pt-5">
        <div class="container content">

            <!-- Page Heading/Breadcrumbs -->
            <div class="row">
                <div class="col-sm-12  mb-2">
                    <h4 class="mb-5"></h4>



                </div>

            </div>
        </div>
    </section>
{% endblock content %}
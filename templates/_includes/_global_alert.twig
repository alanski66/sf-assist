{% set setForSiteId = craft.app.getGlobals().getSetByHandle('globalContent', 1) %}

{% set emergency = setForSiteId.showEmergencyAlert %}

{% set alerts = craft.entries.section('emergencies').siteID(1).limit(1) %}
{% if emergency %}
<div class="emergency small text-center">
    <div class="row mb-0" >
        <div class="m-auto p-2">
            {% for entry in alerts %}
            <i class="fa fa-info-circle mr-2 inline-block" aria-hidden="true"></i>  
            <span class="alert-title inline-block"><a href="{{ entry.url }}">{{ entry.title }}</a></span>
            <span class="date inline-block">
                Issued : {{ entry.postDate.format('F d, Y') }}
            </span>

            {% endfor %}



        </div>
    </div>
</div>
{% endif %}
{#                       class="{{ macros.isActiveChildClass(entry.slug) | trim }} level{{ entry.level }}">{{ entry.title }}</a>#}
{#                </li>#}
                {%  set seggy = "resources" | t %}

                {% set lastSeg = craft.app.request.segments|last %}

                {% if entry.slug == seggy or entry.slug in lastSeg %}

                    <div class="mustache-catnav"></div>
                    {% else %}

                {% endif %}
{#            {% endif %}#}
        {% endfor %}
    </ul>

</div>
{% set entry = craft.entries.id(600).one() %}
                {% if entry is defined %}
                    {# set up menu root and sub nav variables #}
                    {% set landing = entry.getAncestors().level(1).one() %}

                    {% switch landing %}

                    {% case null %}
                    {% if entry.hasDescendants() %}
                        {% set heading = entry.title %}
                        {% set rootpage = entry %}
                    {% endif %}
                    {% set landingId = entry.id %}
                    {% set ancestorIds = entry.getDescendants().ids() %}
                    {% set entryIds = [ landingId ]|merge( ancestorIds ) %}

                    {% case true %}

                    {% set heading = landing.title %}
                    {% set landingId = landing.id %}
                    {% set rootpage = landing %}
                    {% set ancestorIds = landing.getDescendants().ids() %}
                    {% set entryIds = [ landingId ]|merge( ancestorIds ) %}
                    {% endswitch %}

                {% endif %}

<div class="col-md-3 col-md-offset-1 col-lg-4  sidebar d-fex justify-content-end">

    {% if heading is defined %}
        <h4>{{ heading | t }}</h4>
    {% endif %}
<h5>Resources</h5>
    {% set entries = craft.entries.id(entryIds) %}


    <ul class="list-unstyled">
        {% for entry in entries.all() %}

{#            {% if entry.level > 1 %}#}

{#                <li>#}
